<%= render 'shared/navbar' %>
<div class="container d-flex justify-content-center">
  <div class="search-width w-100">
    <%= form_with url: words_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Type words to look up"%>
      <%= submit_tag "Search", name:"", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if @words.length > 0 %>
    <% @words.each do |word_set| %>
      <% word_set.each do |word| %>
        <div class="word-box">
          <%= word.japanese %>
          <%= word.reading %>
          <%= word.english %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
